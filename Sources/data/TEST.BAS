TEXTURE("/TEXTURE.BMP")
BOMBX=0
BOMBY=0
BOMBSPEED=5
SCORE=0
BCKCOLOR=55
X=0
Y=190
WHILE TRUE
CLS(BCKCOLOR)
'HIT DETECTION
IF BOMBX >= X AND BOMBX <= X THEN
IF BOMBY >= Y THEN
SCORE = SCORE - 10
BCKCOLOR=BCKCOLOR+1
IF BCKCOLOR > 65535 THEN BCKCOLOR = 0
ENDIF
ENDIF
'RESPAWN BOMB
IF BOMBY < 240 THEN
BOMBY=BOMBY+BOMBSPEED
ELSE
BOMBY = 0
BOMBX = X
BOMBSPEED=5+RND(5)
SCORE=SCORE+1
ENDIF
'KEY AND CONTROL
KEY=FKEY()
IF KEY = 0X77 THEN Y=Y-10
IF KEY = 0X73 THEN Y=Y+10
IF KEY = 0X64 THEN X=X+10
IF KEY = 0X61 THEN X=X-10
IF KEY = 0X20 THEN EXIT
'SCORE 
CURSOR(0,13)
TXTSCORE="SCORE: "+STR(SCORE)
TEXT(TXTSCORE);
'TEXELS
TEXEL(32,0,64,64,X,Y)
TEXEL(16,0,32,16,BOMBX,BOMBY)
RENDER()
WEND
